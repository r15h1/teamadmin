@model TeamAdmin.Web.Models.AdminViewModels.Team

<h2>Add a Team</h2>

<form asp-action="Add" name="myform" id="myform" method="post">
    <hr />
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
        <div class="form-group">
            <label asp-for="Name" class="col-md-1 control-label"></label>
            <div class="col-md-11">
                <input asp-for="Name" class="form-control" style="max-width:100%" name="Name" id="Name"/>
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>        
        <div class="form-group">
            <div class="col-md-offset-1 col-md-1">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="News">Back to List</a>
</div>

@section headerlinks{
    <link href="~/lib/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
}

@section scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
