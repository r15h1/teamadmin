@model IEnumerable<TeamAdmin.Core.Message>
<h1>Contact Requests</h1>
@if (Model != null && Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="bg-primary">
                    <th class="col-md-2 col-sm-3 col-xs-3">From</th>
                    <th class="col-md-3 col-sm-3 col-xs-3">Email</th>
                    <th class="col-md-5 col-sm-4 col-xs-4">Subject</th>
                    <th class="col-md-2 col-sm-2 col-xs-2">Date</th>
                </tr>
            </thead>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.Name</td>
                    <td>@message.Email</td>
                    <td><a href="/admin/contacts/@message.MessageId.Value" rel="nofollow">@message.Subject</a></td>                   
                    <td>@message.DateCreated.Value.ToLocalTime().ToString("dd MMM hh:mm tt")</td>                    
                </tr>
            }
        </table>
    </div>
}