@model IEnumerable<TeamAdmin.Core.Team>
@using TeamAdmin.Lib.Util
<div class="container">
    <h2 style="border-bottom:solid 1px rgba(255,255,255,0.3);">Teams</h2>

    @if (Model != null && Model.Count() > 0)
    {
        @foreach (var team in Model)
        {
            <div class="col-sm-6 col-md-3 tile">
                <a href="/teams/@team.TeamId/@team.Name.MakeSEOFriendlyUrl()" class="thumbnail">
                    @if (team.Media != null && team.Media.Count() > 0)
                    {
                        <img class="media-object" src="@team.Media.FirstOrDefault().Url?w=200&h=117&mode=crop" srcset="@team.Media.FirstOrDefault().Url?w=200&h=117&mode=crop 200w, @team.Media.FirstOrDefault().Url?w=360&h=210&mode=crop 360w" alt="@team.DisplayName">
                    }
                    else
                    {
                        <img class="media-object" src="@Settings.ImageUrlRoot/no_image.jpeg?w=200&h=117&mode=crop" srcset="@Settings.ImageUrlRoot/no_image.jpeg?w=200&h=117&mode=crop 200w, @Settings.ImageUrlRoot/no_image.jpeg?w=360&h=210&mode=crop 360w" alt="@team.DisplayName">
                    }
                    <h4 class="caption media-heading">@(string.IsNullOrWhiteSpace(team.DisplayName) ? team.Name : team.Name + " - " + team.DisplayName)</h4>
                </a>
            </div>
        }
    }
</div>